---
template: node
---
    <h2>Required Materials</h2>
    <ul>
        {% for item in required_materials %}
            <li>{{(item|markdown).replace("<p>","").replace("</p>","")}}</li>
        {% endfor %}
    </ul>
    <h2>Recommended Materials</h2>
    <ul>
        {% for item in recommended_materials %}
            <li>{{(item|markdown).replace("<p>","").replace("</p>","")}}</li>
        {% endfor %}
    </ul>
    <h2>Schedule</h2>
    <table class="schedule">
      <tr>
        <th>#</th><th>Topics</th><th>Reading/Resources</th><th>Exercises</th>
      </tr>
      {% for row in table %}
      {% if "internal_header" in row %}
      <tr><th colspan="6">{{row["internal_header"]}}</th></tr>
      {% else %}
      <tr>
        <td style="width: 10ch">{{row["date"]}}</td>
        <td>{{(row["slides"]|markdown).replace("<p>","").replace("</p>","")}}</td>
        <td>
          {% for item in row["reading"][:-1] %}
          {{(item|markdown).replace("<p>","").replace("</p>","")}}<br/>
          {% endfor %}
          {{(row["reading"][-1]|markdown).replace("<p>","").replace("</p>","")}}
        </td>
        <td>
          {% for item in row["exercises"][:-1] %}
          {{(item|markdown).replace("<p>","").replace("</p>","")}}<br/>
          {% endfor %}
          {{(row["exercises"][-1]|markdown).replace("<p>","").replace("</p>","")}}
        </td>
      </tr>
      {% endif %}
      {% endfor %}
    </table>
